					}
				}
				else {
					if (statusLabel) {
						statusLabel.text = "You must be logged in to save projects";
					}
				}
				
				radiate.addEventListener(RadiateEvent.LOGGED_IN_STATUS, loggedInStatusHandler, false, 0, true);
			}
			
